<%- include ('partials/header.ejs')%>
<%- include ('partials/navbar.ejs')%>

<div class="container mt-5">
    
    <h1 class="text-center mb-5">Meu Perfil de Jogador</h1>
    
    <div class="row justify-content-center">
        
        <div class="col-md-4 mb-4">
            <div class="p-4 rounded shadow" style="background-color: var(--panel-color);">
                
                <h3 class="text-center mb-4" style="color: var(--highlight-color);">Dados Pessoais</h3>
                
                <div class="text-center mb-3">
                    <img src="/imgs/user.png" class="rounded-circle mb-3" alt="Avatar" width="100" height="100" style="border: 2px solid var(--highlight-color);">
                </div>

                <p>Bem-vindo(a) <%= user%>!</p>
                <p><strong>Status:</strong> <span style="color: var(--highlight-color); font-weight: bold;">Ativo</span></p>
                <p><strong>Membro desde:</strong> 2020 </p>

                <hr style="border-top: 1px solid #005a8f;">

                <a href="/configuracoes" class="btn btn-block w-100 mt-2" style="background-color: var(--highlight-color); color: #FFFFFF; font-weight: bold;">
                    Editar Perfil
                </a>
            </div>
        </div>

        <div class="col-md-8">
            <div class="p-4 rounded shadow" style="background-color: var(--panel-color);">
                <h2 style="color: var(--highlight-color);">Meus Pedidos Recentes</h2>
                <p class="text-white-50">Uma visão rápida das suas últimas compras.</p>

                <ul class="list-unstyled">
                    <li class="lancamentos-item text-secondary mb-3">
                        Pedido #1 - Jogo Azure Striker - R$ 169,90 (<a href="/pedidos" style="color: var(--highlight-color);">Ver Detalhes</a>)
                    </li>
                    <li class="lancamentos-item text-secondary mb-3">
                        Pedido #2 - Jogo The SIMS 4- R$ 34,30 (<a href="/pedidos" style="color: var(--highlight-color);">Ver Detalhes</a>)
                    </li>
                    <li class="lancamentos-item text-secondary mb-3">
                        Pedido #3 - Jogo Retrowave World- R$ 23,09 (<a href="/pedidos" style="color: var(--highlight-color);">Ver Detalhes</a>)
                    </li>
                </ul>

                <a href="/pedidos" class="btn btn-outline-light mt-3" style="border-color: var(--highlight-color); color: var(--highlight-color);">
                    Ver Histórico Completo de Pedidos
                </a>
            </div>
        </div>
    </div>
    
    <div class="text-center mt-5">
        <a href="/" class="btn btn-link" style="color: var(--highlight-color);"><< Voltar para a Home</a>
    </div>

</div>

<%- include ('partials/footer.ejs')%>
